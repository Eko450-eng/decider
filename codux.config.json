{
  "$schema": "https://wixplosives.github.io/codux-config-schema/codux.config.schema.json",
  "boardGlobalSetup": "./app/_codux/boards-global-setup.ts",
  "componentsDiscovery": {
    "include": [
      "app/**"
    ],
    "exclude": [
      "app/_codux/component-templates/**"
    ]
  },
  "newComponent": {
    "componentsPath": "app/components",
    "templatesPath": "app/_codux/component-templates"
  },
  "safeRender": {
    "maxInstancesPerComponent": 1000
  },
  "scripts": {
    "install": {
      "title": "Install",
      "description": "Run install",
      "command": "npm i",
      "trigger": [
        "checkout",
        "pull",
        "setup"
      ]
    }
  },
  "styling": {
    "solution": "scss modules"
  },
  "svgLoader": "both"
}
